---
import Particles from "astro-particles";
import type { ISourceOptions } from "@tsparticles/engine";

const options: ISourceOptions = {
  background: {
    color: "#000", // Background color
  },
  fullScreen: {
    zIndex: -1, // Ensure particles are behind other content
  },
  particles: {
    number: {
      value: 50, // Reduced particle count
      density: {
        enable: true,
        area: 800, // Density area for visibility
      },
    },
    color: {
      value: "#ffffff", // Particle color
    },
    shape: {
      type: "polygon",
      options: {
        polygon: {
          sides: 5, // Change to 5-sided shapes for testing
        },
      },
    },
    opacity: {
      value: 0.5, // Increased opacity for visibility
      animation: {
        enable: true,
        speed: 2,
        sync: false,
      },
    },
    size: {
      value: 5, // Smaller size for better visibility
      animation: {
        enable: true,
        speed: 2,
        sync: false,
      },
    },
    move: {
      enable: true,
      speed: 1, // Slower speed to observe particles
      direction: "none",
      random: false,
      straight: false,
      outModes: {
        default: "out",
      },
    },
  },
  interactivity: {
    detect_on: "canvas",
    events: {
      onHover: {
        enable: true,
        mode: "repulse", // Test hover interaction
      },
      onClick: {
        enable: true,
        mode: "push", // Test click interaction
      },
    },
    modes: {
      repulse: {
        distance: 150, // Increased distance for testing
        duration: 0.4,
      },
      push: {
        quantity: 2, // Fewer particles added on click
      },
    },
  },
  detectRetina: true,
};
---

<Particles id="tsparticles" options={options} />

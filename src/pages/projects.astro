---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Projects">
  <section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Projects"
      description="Here are some of the open-source projects I've built or contributed to."
    />

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 mt-8">
      {projects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          class="block p-4 bg-neutral-900 rounded-lg shadow-md transition-transform hover:scale-105"
        >
          <img
            src={project.image}
            alt={project.name}
            class="w-full h-40 object-cover rounded-md"
          />
          <h3 class="mt-4 text-lg font-semibold text-white">{project.name}</h3>
          <p class="text-sm text-gray-400 mt-2">{project.description}</p>
        </a>
      ))}
    </div>
  </section>
</Layout>